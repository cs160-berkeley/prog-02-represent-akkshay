    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/twittericon"
        android:layout_toRightOf="@id/imageViewThree"
        android:scaleType="fitCenter"
        android:layout_below="@id/repThreeWebsite"
        android:id="@+id/twitterIconThree"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I'm a senator! Yay me. #ImAwesome "
        android:id="@+id/tweetThree"
        android:textSize="18sp"
        android:textColor="#3399ff"
        android:layout_below="@id/repThreeWebsite"
        android:layout_toRightOf="@id/twitterIconThree"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>
