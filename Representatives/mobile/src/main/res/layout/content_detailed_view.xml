<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="repr.khoslaa.com.representatives.DetailedViewActivity"
    tools:showIn="@layout/activity_detailed_view">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/govfinally"
        android:scaleType= "centerCrop"
        android:id="@+id/govImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImageView"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/pete"
        app:civ_border_width="2dp"
        app:civ_border_color="#3399ff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pete Aguilar"
        android:id="@+id/repName"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/profileImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GENERAL INFO"
        android:id="@+id/generalInfoLabel"
        android:textSize="25sp"
        android:textColor="#0099cc"
        android:layout_below="@+id/repName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Party Affiliation: Democrat"
        android:id="@+id/partyLabel"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/generalInfoLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email: pete.aguilar@ca.gov"
        android:id="@+id/email"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/partyLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website: pete.aguilar.com"
        android:id="@+id/website"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Term Ends: 09/12/2018"
        android:id="@+id/termEnds"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/website"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Committee: XCommittee"
        android:id="@+id/currentComm"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/termEnds"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RECENT BILLS"
        android:id="@+id/recentBills"
        android:textSize="25sp"
        android:textColor="#0099cc"
        android:layout_below="@+id/currentComm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill 2012 - 09/02/2017"
        android:id="@+id/billOne"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/recentBills"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill 20127 - 09/03/2017"
        android:id="@+id/billTwo"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billOne"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>



</RelativeLayout>
