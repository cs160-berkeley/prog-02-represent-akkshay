<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="repr.khoslaa.com.representatives.MainActivity"
    tools:deviceIds="wear">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/govfinally"
        android:scaleType= "centerCrop"
        android:id="@+id/govImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012"
        android:id="@+id/yearLabel"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presidential Vote"
        android:id="@+id/presVoteLabel"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/yearsLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="California"
        android:id="@+id/stateLabel"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/presVoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange County"
        android:id="@+id/countyLabel"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/presVoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22%"
        android:id="@+id/candOnePercentage"
        android:textSize="30sp"
        android:textColor="#ff0000"
        android:layout_below="@+id/presVoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROMNEY"
        android:id="@+id/candOneName"
        android:textSize="10sp"
        android:textColor="#ff0000"
        android:layout_below="@+id/presVoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75%"
        android:id="@+id/candTwoPercentage"
        android:textSize="30sp"
        android:textColor="#3399ff"
        android:layout_below="@+id/presVoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBAMA"
        android:id="@+id/candTwoName"
        android:textSize="10sp"
        android:textColor="#3399ff"
        android:layout_below="@+id/presVoteLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"/>


</android.support.wearable.view.BoxInsetLayout>